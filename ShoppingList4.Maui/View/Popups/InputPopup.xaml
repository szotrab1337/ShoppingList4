<?xml
    version="1.0"
    encoding="utf-8"?>

<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="ShoppingList4.Maui.View.Popups.InputPopup"
    Color="{DynamicResource Gray950}"
    Opened="InputPopup_OnOpened"
    Size="300,200">

    <VerticalStackLayout
        Padding="20"
        Spacing="10">
        <Label
            Text="Wprowadź nazwę:"
            TextColor="{DynamicResource Gray400}" />
        <Entry
            x:Name="InputEntry"
            MaxLength="35"
            Placeholder="Nazwa..." />
        <Button
            Text="OK"
            Margin="0,30,0,0"
            VerticalOptions="End"
            Clicked="OnOkClicked" />
    </VerticalStackLayout>
</toolkit:Popup>