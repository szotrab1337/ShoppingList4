@page "/"
@using ShoppingList4.Blazor.Interfaces

@inject ITokenService _tokenService
@inject IShoppingListService _shoppingListService
@inject NavigationManager _navigationManager

<PageTitle>ShoppingList4</PageTitle>


@foreach (var shoppingList in ShoppingLists)
{
    <MudCard onclick="Open" Class="mb-5">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4">@shoppingList.Name</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Inherit" OnClick="Edit" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Inherit" OnClick="Delete" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText Class="pb-2" Typo="Typo.body1"><em>Liczba rzeczy do kupienia:</em> <b>@shoppingList.EntriesNotBought</b> z <b>@shoppingList.Entries.Count</b></MudText>
        </MudCardContent>
    </MudCard>
}