<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Counter="0" T="string" MaxLength="35" Immediate="true" @bind-Value="Text" Label="Nazwa" Variant="Variant.Text" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Anuluj</MudButton>
        <MudButton Color="Color.Primary" OnClick="Save">Zapisz</MudButton>
    </DialogActions>
</MudDialog>