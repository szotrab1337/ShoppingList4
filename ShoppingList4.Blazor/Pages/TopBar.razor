@using ShoppingList4.Blazor.Interfaces

@inject ITokenService _tokenService

<MudAppBar Color="Color.Dark" Fixed="false">
    <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Edge="Edge.Start" Href="/" />
    <MudSpacer />

    @if (!TokenExists)
    {
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="me-5" Href="/Login">Zaloguj się</MudButton>
    }
    else
    {
        <MudButton Variant="Variant.Filled" Color="Color.Dark" Class="me-5" OnClick="Logout">Wyloguj się</MudButton>
    }

    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/szotrab1337/ShoppingList4" Target="_blank" />
</MudAppBar>